                    "id": {
                        "type": "string"
                    },
                    "eventManagerId": {
                        "type": "string"
                    },
                    "triggerId": {
                        "type": "string"
                    },
                    "payload": {
                        "type": "string"
                    },
                    "response": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    }
                },
                "title": "eventLog"
            },
            "eventLogList": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "$ref": "#/components/schemas/eventLog"
                        }
                    }
                }
            },
            "eventManager": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "chain": {
                        "$ref": "#/components/schemas/chain"
                    },
                    "network": {
                        "type": "string"
                    },
                    "webhookUrl": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    }
                }
            },
            "eventManagerList": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "$ref": "#/components/schemas/eventManager"
                        }
                    }
                }
            },
            "filter": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "operator": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "IDs": {
                "type": "object",
                "properties": {
                    "ids": {
                        "type": "array",

    "components": {
        "schemas": {
            "updateEventManagerBody": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "chain": {
                        "$ref": "#/components/schemas/chain"
                    },
                    "network": {
                        "type": "string"
                    },
                    "webhookUrl": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "triggers": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "$ref": "#/components/schemas/trigger"
                        }
                    }
                }
            },
            "updateTriggerBody": {
                "type": "object",
                "properties": {
                    "eventManagerId": {
